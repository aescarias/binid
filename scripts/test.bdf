{
  meta: {
    bdf: "0.3",
    name: "RIFF container",
    exts: [],
    mime: []
  },
  binary: [
    { type: magic, match: "RIFF" },
    { type: uint32,  id: fileSize, endian: "little" },
    { type: byte[4], id: fileType },
    { type: array[eos], 
      id: chunks,
      item: {
        type: struct,
        endian: "little",
        name: "Chunk",
        fields: [
          { id: ident,  type: byte[4] },
          { id: length, type: uint32, endian: "little" },
          { id: data,   type: byte[length] }
        ]
      }
    }
  ]
}